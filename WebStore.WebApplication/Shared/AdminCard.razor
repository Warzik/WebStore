<div class="admin-card border-left-@Color ">
    <div class="card-body">
        <div class="row no-gutters align-items-center">
            <div class="col mr-2">
                <div class="card-title text-@Color">@Title</div>
                <div class="card-sub-title">@SubTitle</div>
            </div>
            <div class="col-auto">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {

     public enum Colors {
     blue,
    indigo,
    purple,
    pink,
    red,
    orange,
    yellow,
    green,
    teal,
    cyan,
    dark
    }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string SubTitle { get; set; }

    [Parameter]
    public Colors Color { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}
